<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nasa_api">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.details.DetailsActivity"
            android:theme="@style/AppTheme.Splash"></activity>
        <activity android:name=".presentation.onboarding.OnboardingActivity"
            android:theme="@style/AppTheme.Splash"/>
        <activity
            android:name=".presentation.splash.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.view.HomeActivity"
            android:theme="@style/AppTheme.Splash"></activity>
    </application>

</manifest>